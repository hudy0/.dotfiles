# Brewfile (for Homebrew)
# No need to tap homebrew/cask or homebrew/cask-fonts

# CLI tools
brew "git"
# brew "python@3.12"
brew "virtualenvwrapper"
brew "pipx"

# Applications
cask "docker"
cask "postman"
cask "iterm2"
cask "pycharm"
cask "firefox"
cask "brave-browser"
cask "visual-studio-code"


# Install JetBrains Mono Font
cask "font-jetbrains-mono"

